@model Pizza
@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Create Pizza</title>
    <link rel="stylesheet" href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">
    <link rel="stylesheet" href="~/css/userpage.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>
    @Html.Partial("_Sidebar")
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1>Crea una nuova pizza!!</h1>
            </div>
            <form asp-controller="Pizza" asp-action="CreatePizza" method="post">
                @Html.AntiForgeryToken()
                <div class="mb-3">
                    <strong>Titolo:</strong>
                    <input type="text" class="form-control" asp-for="Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <strong>Descrizione:</strong>
                    <input type="text" class="form-control" asp-for="Description">
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <strong>URL Immagine:</strong>
                    <input type="text" class="form-control" asp-for="Pathimg">
                    <span asp-validation-for="Pathimg" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <strong>Prezzo</strong>
                    <input type="text" class="form-control" asp-for="Price">
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Crea questa Pizza</button>
            </form>
        </div>
    </div>
</body>
</html>